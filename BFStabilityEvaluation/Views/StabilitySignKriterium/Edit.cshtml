@model StabilitySignKriterium
@{
    ViewData["Title"] = "Редактировать значения критерия";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <form class="needs-validation" method="post" asp-controller="StabilitySignKriterium" asp-action="Edit">
        <input asp-for="Id" />
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <h2>@ViewData["Title"]</h2>
        <hr />

        <div class="form-floating mt-3">
            <input class="form-control" type="text" asp-for="Name" maxlength="30" required />
            <label asp-for="Name">Наименование</label>
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-floating mt-3">
            <select asp-for="ParameterId" class="form-control" data-live-search="true">
                @foreach (var item in Model.IdParamNavigations)
                {
                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                }
            </select>
            <label asp-for="ParameterId">Наименование параметра</label>
        </div>

        <div class="form-floating mt-3">
            <select asp-for="StabSignId" class="form-control" data-live-search="true">
                @foreach (var item in Model.IdstabPokazNavigations)
                {
                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                }
            </select>
            <label asp-for="StabSignId">Наименование показателя</label>
        </div>


        <div class="form-floating mt-3">
            <input class="form-control" type="text" asp-for="Npech" maxlength="30" required />
            <label asp-for="Npech">Номер печи</label>
            <span asp-validation-for="Npech"></span>
        </div>
        <div class="form-floating mt-3">
            <input class="form-control" type="text" asp-for="Unit" maxlength="30" required />
            <label asp-for="Unit">Единицы измерения</label>
            <span asp-validation-for="Unit"></span>
        </div>
        <div class="form-floating mt-3">
            <input class="form-control" type="text" asp-for="Rang" maxlength="30" required />
            <label asp-for="Rang">Ранг</label>
            <span asp-validation-for="Rang"></span>
        </div>
        <div class="form-floating mt-3">
            <input class="form-control" type="text" asp-for="AcceptableDelta" maxlength="30" required />
            <label asp-for="AcceptableDelta">Допустимое отклонение</label>
            <span asp-validation-for="AcceptableDelta"></span>
        </div>
        <div class="form-floating mt-3">
            <input class="form-control" type="text" asp-for="ActionType" maxlength="30" required />
            <label asp-for="ActionType">Вид действия</label>
            <span asp-validation-for="ActionType"></span>
        </div>


        <div class="form-group mt-3">
            <input class="btn btn-outline-dark" type="submit" name="submit" value="Сохранить" />
            <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
        </div>
    </form>
</div>