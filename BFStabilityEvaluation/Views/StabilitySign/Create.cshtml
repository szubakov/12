@model StabilitySign
@{
    ViewData["Title"] = "Добавить критерий";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <form class="needs-validation" method="post" asp-controller="StabilitySign" asp-action="Create">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <h2>@ViewData["Title"]</h2>
        <hr />
        <div class="form-floating mt-3">
            <input class="form-control" type="text" asp-for="Name" maxlength="30" required />
            <label asp-for="Name">Наименование</label>
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-floating mt-3">
            <input class="form-control" type="text" asp-for="Alias" maxlength="30" required />
            <label asp-for="Alias">Краткое название</label>
            <span asp-validation-for="Alias"></span>
        </div>
        <div class="form-floating mt-3">
            <input class="form-control" type="text" asp-for="LimitWarning" maxlength="30" required />
            <label asp-for="LimitWarning">Верхний предел значений</label>
            <span asp-validation-for="LimitWarning"></span>
        </div>
        <div class="form-floating mt-3">
            <input class="form-control" type="text" asp-for="LimitDanger" maxlength="30" required />
            <label asp-for="LimitDanger">Критическое значение</label>
            <span asp-validation-for="LimitDanger"></span>
        </div>

        <div class="form-group mt-3">
            <input class="btn btn-outline-dark" type="submit" name="submit" value="Сохранить" />
            <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
        </div>
    </form>
</div>