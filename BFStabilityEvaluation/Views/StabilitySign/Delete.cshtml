@model StabilitySign
@{
    ViewData["Title"] = "Критерии";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 col-md-8 offset-md-2">
        <h2>@ViewData["Title"]</h2>
        
        <div class="form-floating mb-3">
            <input class="form-control" type="text" asp-for="Name" readonly />
            <label asp-for="Name">Наименование</label>
        </div>

        <div class="form-floating mb-3">
            <input class="form-control" type="text" asp-for="Alias" readonly>
            <label asp-for="Alias">Краткое наименование</label>
        </div>
        <div class="form-floating mb-3" >
            <input class="form-control" type="text" asp-for="LimitWarning" readonly>
            <label asp-for="LimitWarning">Крайнее значение</label>
        </div>
        <div  class="form-floating mb-3">
            <input class="form-control" type="text" asp-for="LimitDanger" readonly>
            <label asp-for="LimitDanger">Аварийное значение</label>
        </div>
        




        <form method="post" asp-controller="StabilitySign" asp-action="Delete">
           
            <div class="form-group">
                <input class="btn btn-outline-danger" type="submit" name="submit" value="Удалить" />
                <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

