@model Parameter
@{
    ViewData["Title"] = "Редактировать параметра";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="needs-validation" method="post" asp-controller="Parameter" asp-action="Edit">
    <input asp-for="IdParam" />
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <h2>@ViewData["Title"]</h2>
    <hr />
    <div class="form-floating mt-3">
        <input class="form-control" type="text" asp-for="Name" maxlength="30" required />
        <label asp-for="Name"></label>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-floating mt-3">
        <input class="form-control" type="text" asp-for="Alias" maxlength="30" required />
        <label asp-for="Alias"></label>
        <span asp-validation-for="Alias"></span>
    </div>
    <div class="form-floating mt-3">
        <input class="form-control" type="text" asp-for="Unit" maxlength="30" required />
        <label asp-for="Unit"></label>
        <span asp-validation-for="Unit"></span>
    </div>
    <div class="form-floating mt-3">
        <input class="form-control" type="text" asp-for="MinValue" maxlength="30" required />
        <label asp-for="MinValue"></label>
        <span asp-validation-for="MinValue"></span>
    </div>
    <div class="form-floating mt-3">
        <input class="form-control" type="text" asp-for="MaxValue" maxlength="30" required />
        <label asp-for="MaxValue"></label>
        <span asp-validation-for="MaxValue"></span>
    </div>


    <div class="form-group mt-3">
        <input class="btn btn-outline-dark" type="submit" name="submit" value="Сохранить" />
        <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
    </div>
</form>
