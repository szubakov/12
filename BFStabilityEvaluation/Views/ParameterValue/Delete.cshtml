@model ParameterValue
@{
    ViewData["Title"] = "Удалить значение параметра";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
            <h2>@ViewData["Title"]</h2>



            <div class="form-floating mb-3">
                <input class="form-control" type="text" asp-for="Npech" readonly>
                <label asp-for="Npech">Номер печи</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" type="text" asp-for="TimeStampStart" readonly>
                <label asp-for="TimeStampStart">Метка времени</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" type="text" asp-for="Value" readonly>
                <label asp-for="Value">Значение</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" type="text" asp-for="Period" readonly>
                <label asp-for="Period">Период</label>
            </div>




            <form method="post" asp-controller="ParameterValue" asp-action="Delete">

                <div class="form-group">
                    <input class="btn btn-outline-danger" type="submit" name="submit" value="Удалить" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>
