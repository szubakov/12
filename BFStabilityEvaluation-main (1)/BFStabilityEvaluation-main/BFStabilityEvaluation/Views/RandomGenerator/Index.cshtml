@model RandomGeneratorViewModel
@{
    ViewData["Title"] = "Автоматическое заполнение";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <form class="needs-validation" method="post" asp-controller="RandomGenerator" asp-action="Index">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <h2>@ViewData["Title"]</h2>
        <hr />
        <div class="form-floating mt-3">
            <input class="form-control" type="text" asp-for="Npech" maxlength="30" required />
            <label asp-for="Npech"></label>
            <span asp-validation-for="Npech"></span>
        </div>

        <div class="form-floating mt-3 input-group">
            <input class="form-control" type="text" asp-for="DateBeg" value="@Model.DateBeg.ToString("dd.MM.yyyy")" required data-td-toggle='datetimepicker' data-td-target='#TimeStampStart' />
            <label asp-for="DateBeg"></label>
            <div class="btn-group" role="group">
                <span class="input-group-text bi bi-calendar"></span>
            </div>
        </div>
        <div class="form-floating mt-3 input-group">
            <input class="form-control" type="text" asp-for="DateEnd" value="@Model.DateEnd.ToString("dd.MM.yyyy")" required />
            <label asp-for="DateEnd"></label>
            <div class="btn-group" role="group">
                <span class="input-group-text bi bi-calendar"></span>
            </div>
        </div>

        <div class="form-group mt-3">
            <input class="btn btn-outline-dark" type="submit" name="submit" value="Сгенерировать" />
        </div>
    </form>
</div>